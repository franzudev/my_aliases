# SYSTEM ALIAS
alias norminette="~/.norminette/norminette.rb"
alias build="gcc -Wall -Werror -Wextra"
alias check="norminette -R CheckForbiddenSourceHeader"

run() {
    build $1;
    if [[ -n "${2+1}" && -n "${3+1}" ]]; then
        ./a.out $2 $3;
        return 0;
    fi
    if [[ -n "${2+1}" ]]; then
        ./a.out $2;
        return 0;
    fi
    ./a.out;
}
